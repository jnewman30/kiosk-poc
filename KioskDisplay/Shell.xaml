            <Border BorderBrush="{StaticResource ButtonBorderBrush}"
                    BorderThickness="1"
                    Padding="2">
                <Frame x:Name="mainFrame" 
                       NavigationUIVisibility="Hidden" 
                       Source="{Binding CurrentPage}" />
            </Border>
        </DockPanel>
    </Border>
</Window>

